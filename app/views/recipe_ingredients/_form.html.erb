<%= simple_form_for @recipe_ingredient,remote: true, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :quantity, input_html: {class: 'form-control'} %>
    <%= f.simple_fields_for :ingredients do |g| %>
      <%= g.input :name, input_html: {class: 'form-control'} %>
      <%= g.input :purchase_price, input_html: {class: 'form-control'} %>
      <%= g.input :purchase_quantity, input_html: {class: 'form-control'} %>
      <%= g.input :unit, input_html: {class: 'form-control'} %>
      
    <% end %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recipe_ingredients_path, :class => 'btn btn-default' %>
<% end %>
