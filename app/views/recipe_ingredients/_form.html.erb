<%= simple_form_for @recipe_ingredient, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :recipe_id %>
  <%= error_span(@recipe_ingredient[:recipe_id]) %>
  <%= f.input :ingredient_id %>
  <%= error_span(@recipe_ingredient[:ingredient_id]) %>
  <%= f.input :quantity %>
  <%= error_span(@recipe_ingredient[:quantity]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recipe_ingredients_path, :class => 'btn btn-default' %>
<% end %>
