<h1>Listing all recipe_ingredients</h1>
<p>
    <%= link_to "Create new recipe_ingredient", new_recipe_ingredient_path %>
</p>
<table>
    <tr>
        <th>Recipe ID</th>
        <th>Ingredient ID</th>
        <th>Quantity</th>
    </tr>
    
    <% @recipe_ingredients.each do |recipe_ingredient| %>
        <tr>
            <td><%= recipe_ingredient.recipe_id %></td>
            <td><%= recipe_ingredient.ingredient_id %></td>
            <td><%= recipe_ingredient.quantity %></td>
            <td><%= link_to 'Edit', edit_recipe_ingredient_path(recipe_ingredient) %></td>
            <td><%= link_to 'Show', recipe_ingredient_path(recipe_ingredient) %></td>
            <td><%= link_to 'Delete', recipe_ingredient_path(recipe_ingredient), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>

   
</table>
<br><br>

    <% @recipe_ingredients.each do |recipe_ingredient| %>
        <%= link_to "#{recipe_ingredient.recipe_id}", recipe_ingredient_path(recipe_ingredient) %>
    <% end %>
