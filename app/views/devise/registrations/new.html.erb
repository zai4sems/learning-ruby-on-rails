
<%= bootstrap_devise_error_messages! %>
<div class="row register-form">
        <div class="col-md-8 col-md-offset-2">
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class:"form-horizontal custom-form", role: "form" }) do |f| %>
                <h1>Register Form</h1>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <%= f.label :email, class: 'control-label'  %>
                    </div>
                    <div class="col-sm-6 input-column">
                        <%= f.email_field :email, autofocus: true, class: "form-control" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <%= f.label :first_name, class: 'control-label' %>
                    </div>
                    <div class="col-sm-6 input-column">
                        <%= f.text_field :first_name, class: "form-control" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <%= f.label :last_name, class: 'control-label' %>
                    </div>
                    <div class="col-sm-6 input-column">
                        <%= f.text_field :last_name, class: "form-control" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <%= f.label :hours_worked_per_week, class: 'control-label' %>
                    </div>
                    <div class="col-sm-6 input-column">
                        <%= f.number_field :hour_worked_per_week, class: "form-control", min: 1, step: :any  %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <%= f.label :no_of_weeks_holiday_per_year, class: 'control-label' %>
                    </div>
                    <div class="col-sm-6 input-column">
                        <%= f.number_field :no_of_week_holiday_per_year, placeholder: "hint: There are 52 weeks per year", class: "form-control", min: 0, step: :any  %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <%= f.label :password, class: 'control-label' %>
                    </div>
                    <div class="col-sm-6 input-column">
                        <%= f.password_field :password, class: "form-control" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <%= f.label :password_confirmation, class: 'control-label' %>
                    </div>
                    <div class="col-sm-6 input-column">
                        <%= f.password_field :password_confirmation, class: "form-control" %>
                    </div>
                </div>
                <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-default submit-button" %><br>
                <%= render "devise/shared/links" %>
            
            <% end %>
        </div>
    </div>