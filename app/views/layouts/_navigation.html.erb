

<% if current_user  %>
<div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"><%= link_to 'Recipe Management', root_path, class: "navbar-brand" %></li>
                <li><%= menu_item "Recipe", recipes_path %></li>
                <li><%= menu_item "Ingredient", ingredients_path %></li>
                <li><%= menu_item "Overhead", overheads_path %></li>
                <li><%= link_to "My Profile", edit_registration_path(current_user)  %></li>
            </ul>
        </div> 
        <div class="page-content-wrapper">
                <div class="row">
                    <div class="col-md-9">
                        <div class="page-header">
                                 <div class="navbar navbar-default navbar-static-top">
                                  <div class="container">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                                          <span class="icon-bar"></span>
                                          <span class="icon-bar"></span>
                                          <span class="icon-bar"></span>
                                        </button>
                                   <div class="navbar-collapse collapse navbar-responsive-collapse">
                                      <ul class="nav navbar-nav col-md-6">
                                        <%#= menu_item "Recipe", recipes_path %>
                                        <%#= menu_item "Overhead", overheads_path %>
                                        <li><%#= link_to "My Profile", edit_registration_path(current_user)  %></li>
                                        
                                      </ul>
                                      <ul class="nav navbar-right col-md-4">
                                        <li class="col-md-4 user-name text-right">
                                          <i class="fa fa-user"></i>
                                          <%= current_user.full_name.present? ? current_user.full_name : current_user.email %>
                                        </li>
                                        <li class="col-md-4 logout"><%= link_to "logout", destroy_user_session_path, class: 'btn btn-xs btn-danger', method: :delete %></li>
                                      </ul>
                                    </div>
                                   </div>
                                 </div>    
                          </div>
                            <%= bootstrap_flash %>
                            <%= yield %>
                </div>
            </div>
        </div>
    </div>
<% else %>

  <div class="row">
          <div class="col-lg-6 col-centered">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>
        </div>
<% end %>