    
 


        <tr id="ingredient_<%= ingredient.id %>">
        <td><%= ingredient.name %></td>
        <td><%= number_to_currency(ingredient.purchase_price) %></td>
        <td><%= ingredient.volume %></td>
        <td><%= ingredient.unit %></td>
        <td><%= number_to_currency(ingredient.price) %></td>
        <td>
            <%#= link_to 'Edit', edit_ingredient_path(ingredient), :class => 'btn btn-default btn-xs', remote: true  %>
            <%#= link_to 'Show', ingredient_path(ingredient), :class => 'btn btn-default btn-xs' %>
            <%#= link_to 'Delete', ingredient_path(ingredient), method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-xs btn-danger' %>
            
            <button type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#myupdateingredient_<%= ingredient.id %>">
                Edit
            </button>
            <%= link_to 'Delete', ingredient, method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-danger btn-xs', remote: true %>
        </td>
        </tr>


    
    
    

    <%= form_for(ingredient, :method => :put, remote: true) do |f| %>
        <div class="modal fade" id="myupdateingredient_<%= ingredient.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Edit Ingredient</h4>
            </div>
            <div class="modal-body">
              <div class="field">
                <%= f.label :ingredient_name%><br>
                <%= f.text_field :name, class: "form-control"%>
              </div>
              <div class="field">
                <%= f.label :purchase_price %>
                <%= f.number_field :purchase_price, step: 'any', class:"form-control" %>
              </div>
              <div class="field">
                <%= f.label :purchase_weight_or_volume %>
                <%= f.number_field :volume, class:"form-control" %>
              </div>
              <div class="field">
                <%= f.label :unit %>
                <%= f.text_field :unit, class:"form-control" %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" id="myupdatebutton_<%= ingredient.id %>">Close</button>
              <%= submit_tag "Update", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  
    
    
