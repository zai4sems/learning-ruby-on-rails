<h1>Listing all ingredients</h1>
<p>
    <%= link_to "Create new ingredient", new_ingredient_path %>
</p>
<table>
    <tr>
        <th>Ingredient Name</th>
        <th>Purchase price</th>
        <th>Purchase weight or volume</th>
        <th>Unit</th>
        <th>Price per single unit</th>
    </tr>
    
    <% @ingredients.each do |ingredient| %>
        <tr>
            <td><%= ingredient.name %></td>
            <td><%= ingredient.purchase_price %></td>
            <td><%= ingredient.volume %></td>
            <td><%= ingredient.unit %></td>
            <td><%= number_to_currency(ingredient.price) %></td>
            <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
            <td><%= link_to 'Show', ingredient_path(ingredient) %></td>
            <td><%= link_to 'Delete', ingredient_path(ingredient), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>

   
</table>
<br><br>

    <% @ingredients.each do |ingredient| %>
        <%= link_to "#{ingredient.name}", ingredient_path(ingredient) %>
    <% end %>
