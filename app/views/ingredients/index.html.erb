
    
<div class= "row">
  <div class = "container col-md-10">
    <h1><i class="fa fa-th-list" aria-hidden="true"></i> Ingredients
      <div class = "pull-right">
        <button type="button" class="btn custom-new-button" data-toggle="modal" data-target="#mynewingredient">
          <i class="fa fa-plus" aria-hidden="true"></i> Add Ingredient
        </button>
      </div> 
    </h1>
    
    
    <%= form_for(@ingredient, remote: true, id: 'ingredient-popup-form', :html => {:class => 'form-horizontal'}) do |f| %>
        <div class="modal fade" id="mynewingredient" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Create new Ingredient</h4>
            </div>
            <div class="modal-body">
             <div id="show_ingredient_error" style="display:none;">
                <div class="row">
                    <div class="panel panel-danger">
                      <div class="panel-heading">
                        
                        <div class="panel-body">
                          <div id="ingredient_errors_div"></div>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
              <div class="field form-group">
                <%= f.label :ingredient_name, class: "col-sm-4"%>
                <div class="col-sm-8">
                  <%= f.text_field :name, class: "form-control ingredient_name"%>
                </div>
              </div>
              <div class="field form-group">
                <%= f.label :purchase_price, class: "col-sm-4" %>
                <div class="col-sm-8">
                  <%= f.number_field :purchase_price, step: 'any', class:"form-control ingredient_purchase_price" %>
                </div>
              </div>
              <div class="field form-group">
                <%= f.label :purchase_weight_or_volume, class: "col-sm-4" %>
                <div class="col-sm-8">
                  <%= f.number_field :volume, class:"form-control ingredient_volume" %>
                </div>
              </div>
              <div class="field form-group">
                <%= f.label :unit, class: "col-sm-4" %>
                <div class="col-sm-8">
                  <%= f.text_field :unit, class:"form-control ingredient_unit" %>
                </div>
              </div>
              
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewingredientclose">Close</button>
              <%= submit_tag "Create", class: "btn custom-small-new-button" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      
<div class="panel panel-default">
	<div class="panel-heading panel-heading-custom">
		Ingredient List
	</div>
	<div class="panel-body">
    	<table class="display responsive no-wrap" id="table_datatable">
        <thead>
        <tr>
            <th>Ingredient Name</th>
            <th>Purchase price</th>
            <th>Purchase weight or volume</th>
            <th>Unit</th>
            <th>Price per single unit</th>
            <th>Last modified</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody id="container_ingredients">
            <%= render @ingredients %>
        </tbody>
      </table>
	</div>
</div>

</div>
</div>




