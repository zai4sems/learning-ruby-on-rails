var ready;
ready = function () {
<% if @ingredient.errors.any? %>
   
    $('#errors_div2').empty();
    <% str2 = "The following errors prevented the ingredient from getting updated" + "<br/>" %>
    $("#errors_div2").append("<%= raw j str2 %>");
    <% str = "" %>
    <% @ingredient.errors.full_messages.each do |error| %>
        <% str+= error + "<br/>" %>
    <% end %>
    $("#errors_div2").append("<%= raw j str %>");
<% else %>
    
    $("#myupdateingredient_<%= @ingredient.id %>").modal('hide');

      $("#ingredient_<%= @ingredient.id %>").fadeOut(500, function(){
         $(this).remove();
         $("#container_ingredients").append('<%= j render @ingredient %>');
      });
<% end %>

};
$(document).ready(ready);
$(document).on('page:load', ready);
$(document).on('turbolinks:render', ready);