<button type="button" class="btn btn-default btn-xs fa fa-pencil-square-o" data-toggle="modal" data-target="#myupdateingredient_<%= g.id %>">
                
</button>


<div class="modal fade" id="myupdateingredient_<%= g.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <%= form_for(g, :method => :put, remote: true, :html => {:class => 'form-horizontal' }) do |f| %>
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Edit Ingredient</h4>
                    </div>
                    <div class="modal-body">
             
                      <div class="field form-group">
                        <%= f.label :ingredient_name, class: "col-sm-4"%>
                        <div class="col-sm-8">
                          <%= f.text_field :name, class: "form-control ingredient_name"%>
                        </div>
                      </div>
                      <div class="field form-group">
                        <%= f.label :purchase_price, class: "col-sm-4" %>
                        <div class="col-sm-8">
                          <%= f.number_field :purchase_price, step: 'any', class:"form-control ingredient_purchase_price" %>
                        </div>
                      </div>
                      <div class="field form-group">
                        <%= f.label :purchase_weight_or_volume, class: "col-sm-4" %>
                        <div class="col-sm-8">
                          <%= f.number_field :volume, class:"form-control ingredient_volume" %>
                        </div>
                      </div>
                      <div class="field form-group">
                        <%= f.label :unit, class: "col-sm-4" %>
                        <div class="col-sm-8">
                          <%= f.text_field :unit, class:"form-control ingredient_unit" %>
                        </div>
                      </div>
                      
                          <div id="errors_div">
                            
                          </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal" id="myupdatebutton_<%= g.id %>">Close</button>
                      <%= submit_tag "Update", class: "btn btn-primary"%>
                    </div>
                  </div>
                </div>
                <% end %>
              </div>