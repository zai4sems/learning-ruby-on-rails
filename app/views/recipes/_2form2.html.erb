<%= simple_form_for @recipe, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@recipe[:title]) %>
  <%= f.input :description %>
  <%= error_span(@recipe[:description]) %>
  <%= f.input :instructions %>
  <%= error_span(@recipe[:instructions]) %>
  <%= f.input :cost %>
  <%= error_span(@recipe[:cost]) %>
  <%= f.input :need %>
  <%= error_span(@recipe[:need]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recipes_path, :class => 'btn btn-default' %>
<% end %>
