<div class="container">
  <div class="row">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mynewingredient">
      <i class="fa fa-plus" aria-hidden="true"></i> New Ingredient
    </button>
  </div>
  

  
  <!-- Modal -->

    <!-- Modal -->
    
    <%= form_for(@recipe_ingredient, remote: true, id: 'ingredient-popup-form') do |f| %>
        <div class="modal fade" id="mynewingredient" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Create new Ingredient</h4>
            </div>
            <div class="modal-body">
            <div class="field">
                <%= f.label :quantity %><br>
                <%= f.number_field :quantity, class: "form-control quantity"%>
              </div>
                  <%= f.fields_for :ingredients do |builder| %>
                      <div class="field">
                        <%= builder.label :ingredient_name%><br>
                        <%= builder.text_field :name, class: "form-control ingredient_name"%>
                      </div>
                      <div class="field">
                        <%= builder.label :purchase_price %>
                        <%= builder.number_field :purchase_price, step: 'any', class:"form-control ingredient_purchase_price" %>
                      </div>
                                    <div class="field">
                        <%= builder.label :purchase_weight_or_volume %>
                        <%= builder.number_field :volume, class:"form-control ingredient_volume" %>
                      </div>
                      <div class="field">
                        <%= builder.label :unit %>
                        <%= builder.text_field :unit, class:"form-control ingredient_unit" %>
                      </div>
                  <% end %>
              <div id="errors_div"></div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewingredientclose">Close</button>
              <%= submit_tag "Create", class: "btn btn-primary" %>
              <%= link_to "Add to this recipe", recipe_ingredients_path(recipe_id: g.id, ingredient_id: ingredient.id), class: 'btn btn-primary btn-xs', method: :post %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  
</div>