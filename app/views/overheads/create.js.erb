
var ready;
ready = function () {

$('#create_overhead').click(function(){
    $('.overhead_title, .overhead_month1, .overhead_month2, .overhead_month3, .overhead_month4, .overhead_month5, .overhead_month6, .overhead_month7, .overhead_month8, .overhead_month9, .overhead_month10, .overhead_month11, .overhead_month12').val("");
    $('#errors_div').empty();
});

<% if @overhead.errors.any? %>
    $('#errors_div').empty();
    <% str2 = "The following errors prevented the overhead from getting created" + "<br/>" %>
    $("#errors_div").append("<%= raw j str2 %>");
    <% str = "" %>
    <% @overhead.errors.full_messages.each do |error| %>
        <% str+= error + "<br/>" %>
    <% end %>
    $("#errors_div").append("<%= raw j str %>");
<% else %>
    $("#mynewoverhead").modal('hide');
    $(".overhead_title").val('');
    $(".overhead_month1").val('');
    $(".overhead_month2").val('');
    $(".overhead_month3").val('');
    $(".overhead_month4").val('');
    $(".overhead_month5").val('');
    $(".overhead_month6").val('');
    $(".overhead_month7").val('');
    $(".overhead_month8").val('');
    $(".overhead_month9").val('');
    $(".overhead_month10").val('');
    $(".overhead_month11").val('');
    $(".overhead_month12").val('');
    
    $("#container_overheads").append('<%= j render @overhead %>');
    $("#overhead_<%= @overhead.id %>").hide().fadeIn(1000);
    $('.best_in_place').best_in_place();
    location.reload();
<% end %>
};

$(document).ready(ready);
$(document).on('page:load', ready);
$(document).on('turbolinks:render', ready);