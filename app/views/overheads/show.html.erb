<%- model_class = Overhead -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @overhead.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_1) %>:</strong></dt>
  <dd><%= @overhead.month_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_2) %>:</strong></dt>
  <dd><%= @overhead.month_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_3) %>:</strong></dt>
  <dd><%= @overhead.month_3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_4) %>:</strong></dt>
  <dd><%= @overhead.month_4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_5) %>:</strong></dt>
  <dd><%= @overhead.month_5 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_6) %>:</strong></dt>
  <dd><%= @overhead.month_6 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_7) %>:</strong></dt>
  <dd><%= @overhead.month_7 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_8) %>:</strong></dt>
  <dd><%= @overhead.month_8 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_9) %>:</strong></dt>
  <dd><%= @overhead.month_9 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_10) %>:</strong></dt>
  <dd><%= @overhead.month_10 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_11) %>:</strong></dt>
  <dd><%= @overhead.month_11 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_12) %>:</strong></dt>
  <dd><%= @overhead.month_12 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= (@overhead.month_1.to_f + @overhead.month_2.to_f + @overhead.month_3.to_f + @overhead.month_4.to_f + @overhead.month_5.to_f + @overhead.month_6.to_f + @overhead.month_7.to_f + @overhead.month_8.to_f + @overhead.month_9.to_f + @overhead.month_10.to_f + @overhead.month_11.to_f + @overhead.month_12.to_f) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              overheads_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_overhead_path(@overhead), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              overhead_path(@overhead),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
